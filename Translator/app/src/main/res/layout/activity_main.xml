<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsenid.translator.MainActivity">

    <ImageView
        android:id="@+id/translateImage"
        android:layout_width="170dp"
        android:layout_height="169dp"
        app:srcCompat="@drawable/homepage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/yandexBtn"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:text="Yandex"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/translateImage"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="232dp"
        android:layout_height="68dp"
        android:text="Google"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/yandexBtn"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintVertical_bias="0.475" />

</android.support.constraint.ConstraintLayout>
